<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.spring.repositories.aggregation.auth.mapper.TResourceMapper">
    <resultMap id="BaseResultMap" type="org.example.spring.repositories.aggregation.auth.table.po.TResource">
        <!--@mbg.generated-->
        <!--@Table t_resource-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="create_id" jdbcType="BIGINT" property="createId"/>
        <result column="update_id" jdbcType="BIGINT" property="updateId"/>
        <result column="create_user" jdbcType="VARCHAR" property="createUser"/>
        <result column="update_user" jdbcType="VARCHAR" property="updateUser"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="pid" jdbcType="BIGINT" property="pid"/>
        <result column="weight" jdbcType="INTEGER" property="weight"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, create_id, update_id, create_user, update_user, create_date, update_date, `name`,
        `type`, url, pid, weight
    </sql>

    <select id="existChidByPids" resultType="boolean">
        select count(*) from t_resource where pid in (<foreach collection="ids" item="id" separator=",">
        #{id,jdbcType=BIGINT}
    </foreach> )
        limit 1
    </select>
</mapper>