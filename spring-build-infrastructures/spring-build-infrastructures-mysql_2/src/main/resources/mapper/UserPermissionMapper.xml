<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.example.spring.infrastructures.mysql.auth.mapper.UserPermissionMapper">
    <resultMap id="base" type="org.example.spring.infrastructures.mysql.auth.table.po.TPermission"
               extends="org.example.spring.infrastructures.mysql.auth.mapper.TPermissionMapper.BaseResultMap"/>

    <select id="listPermissionByUserId" resultMap="base">
        select
        <include refid="org.example.spring.infrastructures.mysql.auth.mapper.TPermissionMapper.Base_Column_List">
        </include>
        from t_permission
        where id in (
                select permission_id
                from t_role_permission
                where role_id in (
                        select role_id
                        from t_user_role
                        where user_id = #{userId,jdbcType=BIGINT}
                        )
                )
    </select>
</mapper>